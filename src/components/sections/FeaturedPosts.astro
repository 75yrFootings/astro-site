---
import getFirstParagraph from "../../lib/getFirstParagraph"
interface Props {
  posts: any,
}
const {posts} = Astro.props
---
<section class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900">Featured Articles</h2>
      </div> 

      <div class="grid gap-8 lg:grid-cols-2">
        {
          posts?.map((post: any) => (
            <article class="shadow-md">
              <div class="bg-white border border-gray-200 rounded-lg shadow h-full">
                  <div class="overflow-hidden w-full max-h-[360px]">
                    <a href={"/articles/" + post.slug}>
                      <img class="rounded-t-lg w-full" src={post.mainImage.url} alt={post.mainImage?.alt} />
                    </a>
                  </div>
                  
                  <div class="p-5">
                      <a href={"/articles/" + post.slug}>
                          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{post.title}</h5>
                      </a>
                      <p class="mb-3 font-normal text-gray-700">{getFirstParagraph(post.body, 36)}</p>
                      <a href={"/articles/" + post.slug} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-black bg-accent-green rounded-lg hover:bg-brand-yellow focus:ring-4 focus:outline-none">
                          Read more
                          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                          </svg>
                      </a>
                  </div>
              </div>
            </article> 
          ))
        }
      </div>  
  </div>
</section>