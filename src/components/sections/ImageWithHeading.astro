---
// Visual Image with Heading - 2 column
import Button from "../utils/Button.astro"
import PortableText from '../PortableText.astro';
const {content, smHideImg} = Astro.props
let hasHeading = false
if (content.heading?.length > 2) {
  hasHeading = true
}
const layout = !content.image ? 'mx-auto place-self-center lg:col-start-3 lg:col-span-8' : 'mx-auto place-self-center lg:col-span-7'
const reverseLayout = !content?.switchLayout ? '' : 'order-last'
const hideImage = smHideImg ? 'max-lg:hidden' : ''
---
<section class="bg-white lg:mb-20">
  <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
    {
      content.image &&
      <div class={`${hideImage} mr-auto lg:mt-0 lg:col-span-5 flex h-auto ${reverseLayout}`}>
        <PortableText portableText={content.image} />
      </div>
    }
    
    <div class={layout}>
      <p class="mb-4 uppercase text-dark-red font-semibold">{content.tagline}</p>
      {
        hasHeading &&
        <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl capitalize">{content.heading}</h1>
      }
        <div class="max-w-2xl mb-6 font-light lg:mb-8 md:text-lg lg:text-xl prose">
          <PortableText portableText={content.content} />
        </div>
        {
          content?.displayButton &&
          <div class="w-auto flex justify-center">
            <Button text={content?.button.text} link={content?.button.link} class="bg-brand-yellow text-gray-900 hover:bg-accent-green mx-auto" />
          </div>
        }
    </div>
  </div>
</section>