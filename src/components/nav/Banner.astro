---
// Navigation Header
// becomes footer for mobile nav
const {class: classNames} = Astro.props
const temp = {
  "hours": 'Mon - Fri: 9am to 5pm',
  "phone": '608-446-5454',
  "email": 'info@75yrfootings.com',
}
---
<div class:list={classNames}>
  <div class="mx-auto max-w-screen-2xl w-full">
    <div class="flex items-center justify-end px-6 space-x-6">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16">
          <path fill="currentColor" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z" />
        </svg>
        <p class="flex pl-2">{temp.hours}</p>
      </div>
      <div class="flex items-center hover:text-accent-orange">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16">
          <path fill="currentColor" fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42a18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
        </svg>
        <p class="flex pl-2">
          <a href={`tel:${temp.phone}`}>{temp.phone}</a>
        </p>
      </div>
      <div class="flex items-center hover:text-accent-orange">
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16">
          <path fill="currentColor" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" />
        </svg>
        <p class="flex pl-2">
          <a href={`mailto:${temp.email}`}>{temp.email}</a>
        </p>
      </div>
    </div>
  </div>
  
</div>